{% extends 'base.html.twig' %}

{% block title %}Menu Item{% endblock %}

{% block body %}
    <style>
        th {
            padding: 5px;
            text-align: left;
            color: #ffb400;
        }
       
    </style>
    <a class="btn btn-outline-primary m-5" href="{{ path('app_menu_item_index') }}">back to list</a>
    <div class="m-5">
        <h1>Menu Item</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ menu_item.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ menu_item.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ menu_item.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ menu_item.price }}</td>
                </tr>
                <tr>
                    <th>ImageUrl</th>
                    <td>{{ menu_item.imageUrl }}</td>
                </tr>
            </tbody>
        </table>

        

        <a class="btn btn-outline-success m-2" href="{{ path('app_menu_item_edit', {'id': menu_item.id}) }}">edit</a> 
        <br>
        {{ include('menu_item/_delete_form.html.twig') }}

        
    </div>  
{% endblock %}
